{
    "name": "hotaruma/discounts",
    "homepage": "https://github.com/hotaruma/discounts",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Max Denusenko",
            "email": "maxdenusenko@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hotaruma\\Discounts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hotaruma\\Tests\\": "tests/",
            "Hotaruma\\Benchmark\\": "benchmark/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-pcntl": "*",
        "ext-shmop": "*",
        "ext-sync": "*",
        "hotaruma/http-router": "^0.7",
        "hotaruma/pipeline": "^0.2.2",
        "monolog/monolog": "^3.4",
        "symfony/cache": "^6.3",
        "symfony/console": "^6.3",
        "symfony/dependency-injection": "^6.3"
    },
    "require-dev": {
        "phpbench/phpbench": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": [
            "phpunit tests"
        ],
        "code-style": [
            "phpcs"
        ],
        "code-style-fix": [
            "phpcbf"
        ],
        "analyse": [
            "phpstan analyse"
        ],
        "bench": [
            "phpbench run --report=aggregate"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
